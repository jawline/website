#!/usr/bin/env bash

echo "[+] Cleaning"

rm -rf bin
mkdir bin

if [ ! -d "MarkdownHS" ] ; then
  echo "[+] Downloading MDHS"
  git clone git@github.com:jawline/MarkdownHS.git
fi

echo "[+] Refresh MDHS"

(cd MarkdownHS; git pull; make)

echo "[+] Building"

./MarkdownHS/bin/main "./sources/" "./bin/"
